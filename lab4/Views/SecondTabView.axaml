<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:lab4.ViewModels"
             xmlns:models="clr-namespace:lab4.Models"
             x:Class="lab4.Views.SecondTabView"
             x:DataType="viewModels:ExternalSortingViewModel">
    <Grid ColumnDefinitions="*,360" Margin="16">
        <!-- Основная область с визуализацией внешнего диска -->
        <Grid Grid.Column="0" Margin="0 0 12 0" RowDefinitions="Auto,Auto" RowSpacing="12">
            <Border Padding="16"
                    Background="#FFFFFF"
                    CornerRadius="10"
                    BorderBrush="#E0E7FF"
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="Внешние ленты (на диске)"
                               FontSize="18"
                               FontWeight="Bold" />
                    <TextBlock Text="Каждый блок показывает строку на внешнем носителе. Мы лишь просматриваем их последовательно."
                               Foreground="#6B7280"
                               TextWrapping="Wrap" />
                    <ItemsControl ItemsSource="{Binding ColumnHeaders}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="6" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6 4"
                                        Margin="0 0 6 0"
                                        Background="#EEF2FF"
                                        CornerRadius="4">
                                    <TextBlock Text="{Binding}" FontWeight="SemiBold" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="320">
                        <ItemsControl ItemsSource="{Binding Rows}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" ItemWidth="240" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:CsvRowVisual">
                                    <Border Background="{Binding BackgroundBrush}"
                                            BorderBrush="{Binding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Margin="4"
                                            Padding="10 6">
                                        <StackPanel Spacing="4">
                                            <TextBlock Text="{Binding Id, StringFormat='Блок #{0}'}"
                                                       FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding DisplayText}"
                                                       FontFamily="Consolas"
                                                       TextWrapping="Wrap"
                                                       FontSize="13" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <Border Grid.Row="1"
                    Padding="16"
                    Background="#FFFFFF"
                    CornerRadius="10"
                    BorderBrush="#E0E7FF"
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="Буфер в памяти"
                               FontSize="18"
                               FontWeight="Bold" />
                    <TextBlock Text="{Binding BufferHint}"
                               Foreground="#6B7280"
                               TextWrapping="Wrap" />
                    <ItemsControl ItemsSource="{Binding BufferRows}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" Spacing="6" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:CsvRowVisual">
                                <Border Background="{Binding BackgroundBrush}"
                                        BorderBrush="{Binding BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="8">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{Binding Id, StringFormat='Строка #{0}'}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding DisplayText}"
                                                   FontFamily="Consolas"
                                                   TextWrapping="Wrap"
                                                   FontSize="13" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="{Binding BufferRows.Count, StringFormat='Сейчас в памяти: {0} строк'}"
                               FontStyle="Italic"
                               Foreground="#6B7280" />
                </StackPanel>
            </Border>

        </Grid>

        <!-- Сайдбар -->
        <Grid Grid.Column="1"
              Margin="12 0 0 0"
              RowDefinitions="Auto,*"
              RowSpacing="12">
            <StackPanel Grid.Row="0" Spacing="12">
                <TextBlock Text="Настройки визуализации"
                           FontWeight="Bold"
                           FontSize="18"
                           Margin="0 0 0 8" />

                <Border Background="#F4F7FB" CornerRadius="8" Padding="12">
                    <StackPanel Spacing="10">
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <Button Content="Загрузить CSV"
                                    Click="OnLoadCsvClick"
                                    IsEnabled="{Binding CanLoadFile}" />
                            <TextBlock Text="{Binding LoadedFileName}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       Width="180" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#F4F7FB" CornerRadius="8" Padding="12">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="12">
                            <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                <TextBlock Text="Алгоритм" VerticalAlignment="Center" />
                                <ComboBox Grid.Column="1"
                                          Margin="12 0 0 0"
                                          ItemsSource="{Binding AlgorithmOptions}"
                                          SelectedValue="{Binding SelectedAlgorithm}"
                                          SelectedValueBinding="{Binding Key}"
                                          IsEnabled="{Binding CanChangeSettings}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Value}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>

                            <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center">
                                <TextBlock Text="Ключ сортировки" VerticalAlignment="Center" />
                                <ComboBox Grid.Column="1"
                                          Margin="12 0 0 0"
                                          ItemsSource="{Binding ColumnHeaders}"
                                          SelectedItem="{Binding SelectedColumnHeader}"
                                          IsEnabled="{Binding CanChangeSettings}" />
                            </Grid>
                        </StackPanel>

                        <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                            <TextBlock Text="Задержка"
                                       VerticalAlignment="Center" />
                            <Slider Grid.Column="1"
                                    Margin="12 0"
                                    Minimum="50"
                                    Maximum="2000"
                                    TickFrequency="50"
                                    IsSnapToTickEnabled="True"
                                    Value="{Binding AnimationDelayMs}"
                                    IsEnabled="{Binding CanControl}" />
                            <TextBlock Grid.Column="2"
                                       Margin="12 0 0 0"
                                       Text="{Binding AnimationDelayLabel}"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <StackPanel Spacing="10">
                            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                <Button Content="{Binding PlayButtonLabel}"
                                        Click="OnPlayPauseClick"
                                        IsEnabled="{Binding CanControl}" />
                                <Button Content="Шаг"
                                        Click="OnStepClick"
                                        IsEnabled="{Binding HasPendingActions}" />
                            </StackPanel>
                            <TextBlock Text="{Binding StatusMessage}"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Text="{Binding RemainingSteps, StringFormat='Осталось шагов: {0}'}"
                           FontStyle="Italic" />
            </StackPanel>

            <Border Grid.Row="1"
                    Margin="0"
                    Padding="12"
                    Background="#F9FAFB"
                    CornerRadius="10"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1">
                <Grid RowDefinitions="Auto,*">
                    <Grid Margin="0 0 0 8" ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Лог действий"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="4"
                                    VerticalAlignment="Center">
                            <ToggleSwitch x:Name="AutoScrollToggle"
                                          Margin="0"
                                          IsChecked="True"
                                          Checked="OnAutoScrollToggleChecked"
                                          Unchecked="OnAutoScrollToggleUnchecked"
                                          OnContent=""
                                          OffContent=""
                                          VerticalAlignment="Center" />
                            <TextBlock Text="Автопрокрутка"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="LogListBox"
                                 ItemsSource="{Binding LogEntries}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontFamily="Consolas"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0 2" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
